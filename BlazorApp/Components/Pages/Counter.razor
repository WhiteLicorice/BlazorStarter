@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h4">Counter</MudText>

<MudText Typo="Typo.subtitle2" role="status">Current count: @currentCount</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }
}
